<mujoco model="ReachBot">

    <visual>
        <map force="0.1" zfar="30"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global offwidth="2560" offheight="1440" elevation="-20" azimuth="120"/>
    </visual>
    
    <option timestep="0.005"/>

    <statistic center="0 0 0.7"/>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1=".3 .5 .7" rgb2="0 0 0" width="32" height="512"/>
        <texture name="body" type="cube" builtin="flat" mark="cross" width="128" height="128" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" markrgb="1 1 1"/>
        <material name="body" texture="body" texuniform="true" rgba="0.8 0.6 .4 1"/>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance="0"/>
    </asset>

    <worldbody>
        <body name="Basis" pos="0 0 0.5">
            <!-- X axis (red) -->
            <!-- <geom name="x_axis" fromto="0 0 0 0.1 0 0" type="capsule" size="0.005" rgba="1 0 0 1" contype="0" conaffinity="0"/> -->

            <!-- Y axis (green) -->
            <!-- <geom name="y_axis" fromto="0 0 0 0 0.1 0" type="capsule" size="0.005" rgba="0 1 0 1" contype="0" conaffinity="0"/> -->

            <!-- Z axis (blue) -->
            <!-- <geom name="z_axis" fromto="0 0 0 0 0 0.1" type="capsule" size="0.005" rgba="0 0 1 1" contype="0" conaffinity="0"/> -->
        </body>
        <light directional="true" pos="0 0 5" dir="0 0 -1"/>
        <geom name="floor" size="0 0 .05" type="plane" material="grid" contype="5" condim="3"/>

        <body name="mainBody" pos="0 0 0.5">
            <joint name="freejoint" type="free"/>
            <geom name="mainBody" type="box" size="0.09 0.09 0.02515" mass="0"/>
            
            <body name="arm1" pos="0 0.09 0" euler="-90 0 0">
                <include file="QuadrupedLocomotion/Model/ReachBotArm1.Xml"/>
            </body>

            <body name="arm2" pos="0.09 0 0" euler="-90 90 0">
                <include file="QuadrupedLocomotion/Model/ReachBotArm2.Xml"/>
            </body>

            <body name="arm3" pos="0 -0.09 0" euler="-90 180 0">
                <include file="QuadrupedLocomotion/Model/ReachBotArm3.Xml"/>
            </body>

            <body name="arm4" pos="-.09 0 0" euler="-90 270 0">
                <include file="QuadrupedLocomotion/Model/ReachBotArm4.Xml"/>
            </body>
        </body>

    </worldbody>

    <tendon>
        <include file="QuadrupedLocomotion/Model/ReachBotArmTendons1.Xml"/>
        <include file="QuadrupedLocomotion/Model/ReachBotArmTendons2.Xml"/>
        <include file="QuadrupedLocomotion/Model/ReachBotArmTendons3.Xml"/>
        <include file="QuadrupedLocomotion/Model/ReachBotArmTendons4.Xml"/>
    </tendon>

    <actuator>
        <include file="QuadrupedLocomotion/Model/ReachBotArmActuators1.Xml"/>
        <include file="QuadrupedLocomotion/Model/ReachBotArmActuators2.Xml"/>
        <include file="QuadrupedLocomotion/Model/ReachBotArmActuators3.Xml"/>
        <include file="QuadrupedLocomotion/Model/ReachBotArmActuators4.Xml"/>
    </actuator>

</mujoco>